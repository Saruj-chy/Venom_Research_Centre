<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegularActivity">

    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/appbar"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"

        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/relative_layout_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dimen_5"
                    app:cardElevation="@dimen/dimen_4"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"


                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    >
                    <LinearLayout
                        android:id="@+id/linear_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_10"
                        android:layout_marginVertical="@dimen/dimen_10"

                        android:gravity="center"
                        android:orientation="vertical"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:text="@string/snake_name_"
                                android:textSize="@dimen/dimen_12"
                                android:textColor="@color/black"
                                />
                            <TextView
                                android:id="@+id/text_group_name_daily"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/dimen_20"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:text="@string/snake_id_"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                />
                            <TextView
                                android:id="@+id/text_snake_name_daily"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/dimen_20"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                />
                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_food_offered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:layout_constraintTop_toBottomOf="@+id/card_layout"

                    android:layout_below="@+id/relative_layout_01"
                    android:paddingVertical="@dimen/dimen_10"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/border_input"
                    android:layout_marginTop="10dp"
                    >
                    <!--TODO:: Food Offered title -->
                    <LinearLayout
                        android:id="@+id/linear_food_offer_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >
                        <TextView
                            android:id="@+id/text_food_offered"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="@string/food_offered"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen_20"
                            android:textStyle="bold"
                            android:layout_weight="1"

                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/image_arrow_down_morphometry"
                            />
                        <ImageView
                            android:id="@+id/image_down_food"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:onClick="OnFoodDownImg"
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_arrow_down"
                            tools:ignore="OnClick"
                            android:contentDescription="@string/todo" />
                        <ImageView
                            android:id="@+id/image_up_food"
                            android:layout_width="@dimen/dimen_70"
                            android:layout_height="@dimen/dimen_50"
                            android:onClick="OnFoodUpImg"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_arrow_up"
                            tools:ignore="OnClick"
                            android:contentDescription="@string/todo" />

                    </LinearLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraint_food_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_5"
                        app:layout_constraintTop_toBottomOf="@+id/linear_food_offer_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >
                        <View
                            android:id="@+id/view_food"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_1"
                            android:background="@color/lightgray"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            />
                        <LinearLayout
                            android:id="@+id/linear_food_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_5"
                            android:layout_marginRight="@dimen/dimen_5"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@+id/view_food"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:baselineAligned="false">
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/food_weight_gm"
                                android:layout_weight="1"
                                android:layout_marginEnd="@dimen/dimen_5"
                                >
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edit_food_weight"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"
                                    android:textColor="@color/black"
                                    />

                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/numbers"
                                android:layout_weight="1"
                                >
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edit_numbers"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:textColor="@color/black"
                                    />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linear_food_status_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@+id/linear_food_num"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            >
                            <TextView
                                android:id="@+id/text_food_items"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_50"
                                android:text="@string/food_items"
                                android:textSize="@dimen/dimen_16"
                                android:gravity="center"
                                android:background="@drawable/stroke_solid"
                                android:onClick="OnFoodItems"
                                android:padding="10sp"
                                android:layout_marginVertical="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                />

                            <TextView
                                android:id="@+id/text_food_status"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/food_status"
                                android:textSize="@dimen/dimen_16"
                                android:gravity="center"
                                android:background="@drawable/stroke_solid"
                                android:padding="10sp"
                                android:layout_marginVertical="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1"
                                android:onClick="OnFoodStatus"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linear_date_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:orientation="horizontal"

                            app:layout_constraintTop_toBottomOf="@+id/linear_food_status_text"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:baselineAligned="false">
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/date_yyyy_mm_dd"
                                android:layout_weight="1"
                                android:layout_marginEnd="5dp"
                                >

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edit_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:inputType="date"
                                    />

                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/time_hh_mm"
                                android:layout_weight="1"
                                >
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edit_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:inputType="time"
                                    />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dimen_10"
                    android:background="@drawable/border_input"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/constraint_food_offered"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    >
                    <LinearLayout
                        android:id="@+id/linear_act"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >
                        <TextView
                            android:id="@+id/text_snake_act"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="@string/snake_act"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen_20"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/image_arrow_down_morphometry"
                            />
                        <ImageView
                            android:id="@+id/image_down_act"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:onClick="OnActDownImg"
                            android:visibility="gone"

                            android:layout_gravity="center"
                            android:src="@drawable/ic_arrow_down"
                            tools:ignore="OnClick"
                            android:contentDescription="@string/todo" />
                        <ImageView
                            android:id="@+id/image_up_act"
                            android:layout_width="@dimen/dimen_70"
                            android:layout_height="@dimen/dimen_50"
                            android:onClick="OnActUpImg"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_arrow_up"
                            tools:ignore="OnClick"
                            android:contentDescription="@string/todo" />
                    </LinearLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraint_act_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_5"
                        app:layout_constraintTop_toBottomOf="@+id/linear_act"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >
                        <View
                            android:id="@+id/view_act"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_1"
                            android:background="@color/lightgray"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            />
                        <LinearLayout
                            android:id="@+id/linear_act_during_check"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/dimen_5"
                            app:layout_constraintTop_toBottomOf="@+id/view_act"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/text_act_during_check"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_50"
                                android:text="@string/act_chk"
                                android:textSize="@dimen/dimen_16"
                                android:gravity="center"
                                android:background="@drawable/stroke_solid"
                                android:padding="10sp"
                                android:layout_weight="1"
                                android:onClick="OnActDuringCheck"
                                tools:ignore="InefficientWeight" />
                        </LinearLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/const_exc_health"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/dimen_10"

                            app:layout_constraintTop_toBottomOf="@+id/linear_act_during_check"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">
                            <LinearLayout
                                android:id="@+id/linear_exc_health"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"

                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/text_exc"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dimen_50"
                                    android:text="@string/exc"
                                    android:textSize="@dimen/dimen_16"
                                    android:gravity="center"
                                    android:background="@drawable/stroke_solid"
                                    android:paddingVertical="10sp"
                                    android:paddingHorizontal="@dimen/dimen_5"
                                    android:layout_marginEnd="5dp"
                                    android:layout_weight="1"
                                    android:onClick="OnExcretion"
                                    />
                                <Spinner
                                    android:id="@+id/spinner_health_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:entries="@array/health_status"
                                    android:background="@drawable/stroke_solid"
                                    android:paddingVertical="@dimen/dimen_10"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:textAlignment="center"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/linear_exc_health_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                app:layout_constraintTop_toBottomOf="@+id/linear_exc_health"
                                android:orientation="vertical">
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/text_input_health_status"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:hint="@string/enter_health_status"
                                    android:visibility="gone"
                                    android:layout_weight="1"
                                    >

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edit_health_status"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        tools:ignore="TooDeepLayout" />

                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <LinearLayout
                            android:id="@+id/linear_cleaning"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/dimen_10"
                            app:layout_constraintTop_toBottomOf="@+id/const_exc_health"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/spinner_cleaning"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_50"
                                android:entries="@array/cleaning"
                                android:background="@drawable/stroke_solid"
                                android:layout_marginEnd="5dp"
                                android:paddingVertical="@dimen/dimen_10"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:gravity="center_horizontal" />
                            <Spinner
                                android:id="@+id/spinner_venom_colection"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:entries="@array/venom_collection"
                                android:background="@drawable/stroke_solid"
                                android:paddingVertical="@dimen/dimen_10"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:gravity="center_horizontal" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/text_shed"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_50"
                            android:text="@string/shed_sts"
                            android:textSize="@dimen/dimen_16"
                            android:gravity="center"
                            android:background="@drawable/stroke_solid"
                            android:padding="10sp"
                            android:layout_marginVertical="5dp"
                            android:layout_marginEnd="5dp"
                            android:onClick="OnSheddingStatus"
                            app:layout_constraintTop_toBottomOf="@+id/linear_cleaning"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/const_shed_medi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dimen_10"
                    android:background="@drawable/border_input"
                    android:layout_marginTop="10dp"

                    app:layout_constraintTop_toBottomOf="@+id/constraint_activity"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <LinearLayout
                        android:id="@+id/linear_medi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >
                        <TextView
                            android:id="@+id/text_medi_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dimen_5"
                            android:text="@string/medication"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen_20"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/image_arrow_down_morphometry"
                            />
                        <ImageView
                            android:id="@+id/image_medi_alarm"
                            android:layout_width="@dimen/dimen_50"
                            android:layout_height="@dimen/dimen_50"
                            android:onClick="OnMedAlarmClick"

                            android:layout_gravity="center"
                            android:src="@drawable/baseline_alarm_24"
                            tools:ignore="OnClick,UsingOnClickInXml"
                            android:contentDescription="@string/todo" />
                        <ImageView
                            android:id="@+id/image_medi_add"
                            android:layout_width="@dimen/dimen_40"
                            android:layout_height="match_parent"
                            android:onClick="OnMedAddImg"

                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_add_circle_24"
                            tools:ignore="OnClick,UsingOnClickInXml"
                            android:contentDescription="@string/todo" />
                        <ImageView
                            android:id="@+id/image_down_med"
                            android:layout_width="@dimen/dimen_50"
                            android:layout_height="match_parent"
                            android:onClick="onMedDownImg"
                            android:visibility="gone"

                            android:layout_gravity="center"
                            android:src="@drawable/ic_arrow_down"
                            tools:ignore="OnClick"
                            android:contentDescription="@string/todo" />
                        <ImageView
                            android:id="@+id/image_up_med"
                            android:layout_width="@dimen/dimen_50"
                            android:layout_height="match_parent"
                            android:onClick="OnMedUpImg"

                            android:layout_gravity="center"
                            android:src="@drawable/ic_arrow_up"
                            tools:ignore="OnClick"
                            android:contentDescription="@string/todo" />

                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraint_medi_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_5"

                        app:layout_constraintTop_toBottomOf="@+id/linear_medi"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >
                        <View
                            android:id="@+id/view_medi"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/lightgray"

                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"

                            />
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/text_medi_name"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:hint="@string/name_medicine"
                            app:layout_constraintTop_toBottomOf="@+id/view_medi"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_medi_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:id="@+id/linear_medication"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            app:layout_constraintTop_toBottomOf="@+id/text_medi_name"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            >
                            <TextView
                                android:id="@+id/text_medi"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/medi_process"
                                android:layout_gravity="center_vertical|start"
                                android:textSize="@dimen/dimen_16"
                                android:gravity="center"
                                android:background="@drawable/stroke_solid"
                                android:paddingVertical="10sp"
                                android:paddingHorizontal="@dimen/dimen_5"
                                android:layout_marginVertical="@dimen/dimen_5"
                                android:layout_weight="1"
                                android:onClick="OnMedication"
                                />
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/dose_mg_kg"

                                android:layout_weight="1.3"
                                android:layout_marginEnd="@dimen/dimen_5"
                                android:layout_marginStart="@dimen/dimen_5"
                                >

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edit_medi_qty"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"
                                    android:textColor="@color/black"
                                    />

                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>



                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_medi_details"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dimen_5"

                        app:layout_constraintTop_toBottomOf="@+id/constraint_medi_details"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_medi_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:id="@+id/linear_dose_notice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginVertical="@dimen/dimen_10"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/text_medi_details"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/enter_msg"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/dimen_5"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_notice_msg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:inputType="text"
                                />
                        </com.google.android.material.textfield.TextInputLayout>
                        <TextView
                            android:id="@+id/text_notice_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/select_time"
                            android:textSize="@dimen/dimen_16"
                            android:gravity="center"
                            android:background="@drawable/stroke_solid"
                            android:layout_weight="2"
                            android:paddingVertical="@dimen/dimen_10"
                            android:paddingHorizontal="@dimen/dimen_5"
                            android:onClick="OnNoticeTimeClick"
                            android:layout_marginBottom="@dimen/dimen_10"
                            />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout_remarks"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    app:layout_constraintTop_toBottomOf = "@+id/const_shed_medi"
                    android:layout_margin="5dp"
                    android:hint="@string/remarks"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_remarks"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_150" />

                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:id="@+id/btn_daily_saved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:textSize="@dimen/dimen_18"
                    android:textAllCaps="false"
                    app:layout_constraintTop_toBottomOf="@+id/input_layout_remarks"
                    android:layout_marginBottom="@dimen/dimen_10"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:paddingHorizontal="@dimen/dimen_10"
                    android:layout_marginHorizontal="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_50"
                    android:onClick="onRegularDataEntry"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="OnFabMainClick"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/dimen_10"
        android:gravity="center_vertical"
        android:src="@drawable/ic_baseline_assignment_24"
        app:tint="@color/white"
        app:fabSize="normal"
        tools:ignore="VectorDrawableCompat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/todo" />
    <LinearLayout
        android:id="@+id/linear_fab_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="@dimen/standard_12"
        android:clipToPadding="false"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/dimen_35"
        android:layout_gravity="bottom|start"
        android:visibility="gone">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10"
            android:src="@drawable/ic_baseline_update_24"
            app:tint="@color/white"
            app:fabSize="mini"

            android:onClick="OnUpdateFabClick"
            android:contentDescription="@string/todo"
            tools:ignore="TooManyViews" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update"
            android:textColor="@color/black"
            android:textStyle="bold"
            />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_fab_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="@dimen/standard_12"
        android:clipToPadding="false"
        android:layout_marginEnd="@dimen/standard_23"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/dimen_35"
        android:layout_gravity="bottom|start"
        android:visibility="gone">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="OnAccessFabClick"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/ic_baseline_not_accessible_24"
            app:tint="@color/white"
            app:fabSize="mini"
            tools:ignore="VectorDrawableCompat"
            android:contentDescription="@string/todo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accessible"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>